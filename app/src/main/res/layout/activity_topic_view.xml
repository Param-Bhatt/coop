<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topicViewActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topicHeader"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/nav_layout_bg"
        android:padding="15dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="@string/example"
        android:shadowColor="@color/black"
        android:shadowRadius="15"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/topicHeader"
        app:layout_constraintTop_toBottomOf="@id/topicHeader"
        android:weightSum="2"
        android:id="@+id/topicSubHeader"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:text="@string/example"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/followerCount"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followButton"
            android:layout_weight="1"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/follow"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/topicSubHeader"
        app:layout_constraintTop_toBottomOf="@id/topicSubHeader"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/my_recycler_view"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="@string/newPost"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="30dp"
        app:rippleColor="@color/colorPrimaryDark"/>

</androidx.constraintlayout.widget.ConstraintLayout>
